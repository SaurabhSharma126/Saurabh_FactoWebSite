    <script type="text/javascript">
        //Contact Info
        function submitContactDetails() {
            debugger;
            var contactInfo = $('#myContactInput').val();    
            debugger;

            if(contactInfo != ''){
                $.ajax({
                    url: '/Home/saveContactInfo',
                    type: 'POST',
                    async: false,
                    dataType: 'JSON',
                    data: {contactInfo: contactInfo},
                    success: function (data) { 
                        alert("Saved successfully !" + JSON.parse(data)); 
                    }
                });
            }
            else{
                alert("Contact Infomation cannot be blank!");
            }
        }
    </script>
</head>
